# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,jsx,ts,tsx}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# 2 space indentation
[*.{js,jsx,ts,tsx,json,css,scss,html,xml,yml,yaml}]
indent_style = space
indent_size = 2

# Tab indentation (Make files)
[{Makefile,**.mk}]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

# Package.json
[package.json]
indent_style = space
indent_size = 2

# Python specific
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Config files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Windows files
[*.{bat,cmd,ps1}]
end_of_line = crlf